<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <EditText
        android:id="@+id/ss"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:layout_gravity="center_vertical|right"
        android:text="Bienvenido/a a Coke Game. Este Acuerdo rige el acceso y uso por su parte a productos de software como es el software de juego que se contiene en discos o que se descarga, ofrecido por Coca cola Company y sus filiales (Coke), y actualizaciones y funcionalidades relacionadas, así como servicios, funcionalidades, contenidos y sitios-web online y móviles ofrecidos por Coca cola (colectivamente, los «Servicios de Coke»). Este Acuerdo es entre usted y la entidad Coca Cola "
        android:inputType="textMultiLine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editText2" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:onClick="back"
        android:text="@string/back"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

            <EditText
                android:layout_gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Desarrollado por: Tomas del Angel, Brenda Carreño, Rodrigo Villaverde  "
                android:id="@+id/editText2"
                android:layout_above="@+id/button1"
                android:layout_centerHorizontal="true" />
</RelativeLayout>
